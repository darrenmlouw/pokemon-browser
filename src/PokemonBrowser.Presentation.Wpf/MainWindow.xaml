<Window x:Class="PokemonBrowser.Presentation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PokemonBrowser.Presentation.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="Pokemon Browser" 
        Height="680" 
        Width="1100"
        MinHeight="680"
        MinWidth="1100"
        Background="{DynamicResource AppBackgroundGradientBrush}"
        Foreground="{DynamicResource TextBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>

    <Grid Margin="16 8 16 16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Pokemon Browser" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center" Margin="8 0 0 0" />

            <ToggleButton Grid.Column="1"
                          IsChecked="{Binding IsDarkMode, Mode=TwoWay}"
                          Style="{StaticResource IconToggleButtonStyle}"
                          ToolTip="Toggle theme"
                          AutomationProperties.Name="Toggle theme">
                <Grid>
                    <!-- Light mode icon (shown when IsDarkMode=false) -->
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE706;">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Dark mode icon (shown when IsDarkMode=true) -->
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE708;">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ToggleButton>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="0,0,4,0">
                            <TextBox x:Name="SearchBox" Height="30" VerticalContentAlignment="Center"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="Search..." Foreground="{DynamicResource TextMutedBrush}" Opacity="0.75" Margin="8,0,0,0"
                                       VerticalAlignment="Center" IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=SearchBox, Path=Text}" Value="" />
                                                    <Condition Binding="{Binding ElementName=SearchBox, Path=IsKeyboardFocusWithin}" Value="False" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Width="32" Height="32" Padding="0" Margin="0,0,4,0"
                                    Command="{Binding ClearSearchCommand}" ToolTip="Clear search">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                        <Setter Property="IsEnabled" Value="True" />
                                        <Setter Property="Opacity" Value="1" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                                <Setter Property="IsEnabled" Value="False" />
                                                <Setter Property="Opacity" Value="0.35" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE711;"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Button>

                            <Button Width="32" Height="32" Padding="0" Style="{StaticResource IconButtonStyle}"
                                    Command="{Binding RefreshCommand}" ToolTip="Refresh">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE72C;"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ProgressBar Height="8"
                                     Margin="0 8 16 8"
                                     IsIndeterminate="True"
                                     HorizontalAlignment="Stretch"
                                     Visibility="{Binding IsLoadingList, Converter={StaticResource BoolToVisibility}}" />
                    </Grid>

                    <TextBlock Grid.Row="2" Margin="8" Foreground="{DynamicResource DangerBrush}" TextWrapping="Wrap" FontWeight="SemiBold" FontStyle="Italic"
                               Text="{Binding ListErrorMessage}"
                               Visibility="{Binding HasListError, Converter={StaticResource BoolToVisibility}}" />

                    <ListBox Grid.Row="3"
                             Padding="0"
                             Margin="0"
                             ItemsSource="{Binding FilteredPokemon}"
                             SelectedItem="{Binding SelectedPokemon, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="4">
                                    <Border DockPanel.Dock="Left" Width="60" Height="60" Margin="0,0,12,0"
                                            CornerRadius="14" Background="{DynamicResource ImagePlaceholderBrush}" ClipToBounds="True"
                                            SnapsToDevicePixels="True">
                                        <Image Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               SnapsToDevicePixels="True"
                                               Source="{Binding SpriteUrl}" />
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding DisplayName}"/>
                                    </StackPanel>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ProgressBar Grid.Column="0" Height="8" IsIndeterminate="True" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                     Margin="0,0,0,0"
                                     Visibility="{Binding IsLoadingDetails, Converter={StaticResource BoolToVisibility}}" />
                    </Grid>

                    <Grid Grid.Row="2">
                        <TextBlock Foreground="{DynamicResource TextMutedBrush}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Text="Select a Pokemon from the list to see details.">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding HasPokemonDetails}" Value="False" />
                                                <Condition Binding="{Binding IsLoadingDetails}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ScrollViewer.Style>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasPokemonDetails}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ScrollViewer.Style>

                            <Grid DataContext="{Binding PokemonDetails}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,0">
                                    <TextBlock DockPanel.Dock="Left" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom"
                                               Text="{Binding DisplayName}" />
                                    <TextBlock DockPanel.Dock="Right" Style="{StaticResource MutedText}" VerticalAlignment="Bottom" Margin="0 0 0 4"
                                               HorizontalAlignment="Right">
                                        <Run Text="#" />
                                        <Run Text="{Binding Id, Mode=OneWay, StringFormat={}{0:000}}" />
                                    </TextBlock>
                                </DockPanel>

                                <Border Grid.Row="1" Width="240" Height="240" HorizontalAlignment="Left" Margin="0,0,0,12"
                                        Background="Transparent" CornerRadius="14" SnapsToDevicePixels="True" CacheMode="BitmapCache">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="26"
                                                          ShadowDepth="10"
                                                          Opacity="0.32"
                                                          Color="{DynamicResource CardShadowColor}"
                                                          RenderingBias="Quality" />
                                    </Border.Effect>
                                    <Image Stretch="Uniform" Source="{Binding ImageUrl}" />
                                </Border>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Style="{StaticResource MutedText}" Text="Height:" FontSize="14" />
                                    <TextBlock Margin="8,0,0,0" Text="{Binding HeightMetersDisplay}" FontSize="14" />
                                    <TextBlock Margin="18,0,0,0" Style="{StaticResource MutedText}" Text="Weight:" FontSize="14" />
                                    <TextBlock Margin="8,0,0,0" Text="{Binding WeightKgDisplay}" FontSize="14" />
                                </StackPanel>

                                <StackPanel Grid.Row="4">
                                    <TextBlock Margin="0,0,0,6" FontSize="18" FontWeight="SemiBold" Text="Base stats" />
                                    <ItemsControl ItemsSource="{Binding BaseStats}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="54" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="24" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource MutedText}" Text="{Binding DisplayName}" FontSize="14" />
                                                    <ProgressBar Grid.Column="1" Height="10" VerticalAlignment="Center" Margin="12,0,12,0"
                                                                 Maximum="255" Value="{Binding Value}" />
                                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding Value}" FontSize="14" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
