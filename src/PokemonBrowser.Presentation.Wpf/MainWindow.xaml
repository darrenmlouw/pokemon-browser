<Window x:Class="PokemonBrowser.Presentation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PokemonBrowser.Presentation.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="Pokemon Browser" Height="720" Width="1100">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Pokemon Browser" FontSize="20" FontWeight="SemiBold" DockPanel.Dock="Left" />
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#33000000" BorderThickness="1" CornerRadius="6" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="0,0,10,0">
                            <TextBox x:Name="SearchBox" Height="30" VerticalContentAlignment="Center"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="Search..." Foreground="#99000000" Margin="10,0,0,0"
                                       VerticalAlignment="Center" IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=SearchBox, Path=Text}" Value="" />
                                                    <Condition Binding="{Binding ElementName=SearchBox, Path=IsKeyboardFocusWithin}" Value="False" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Width="32" Height="32" Padding="0" Margin="0,0,10,0"
                                    Command="{Binding ClearSearchCommand}" ToolTip="Clear search">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="IsEnabled" Value="True" />
                                        <Setter Property="Opacity" Value="1" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                                <Setter Property="IsEnabled" Value="False" />
                                                <Setter Property="Opacity" Value="0.35" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE711;"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Button>

                            <Button Width="32" Height="32" Padding="0"
                                    Command="{Binding RefreshCommand}" ToolTip="Refresh">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE72C;"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Button>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <ProgressBar Width="200" Height="8" IsIndeterminate="True"
                                     Visibility="{Binding IsLoadingList, Converter={StaticResource BoolToVisibility}}" />
                        <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#77000000"
                                   Text="{Binding ListStatusText}" />
                    </StackPanel>

                    <TextBlock Grid.Row="2" Margin="0,0,0,10" Foreground="#CCB00020" TextWrapping="Wrap"
                               Text="{Binding ListErrorMessage}"
                               Visibility="{Binding HasListError, Converter={StaticResource BoolToVisibility}}" />

                    <ListBox Grid.Row="3"
                             ItemsSource="{Binding FilteredPokemon}"
                             SelectedItem="{Binding SelectedPokemon, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="4">
                                    <Border DockPanel.Dock="Left" Width="60" Height="60" Margin="0,0,10,0"
                                            CornerRadius="12" Background="#0A000000" ClipToBounds="True"
                                            SnapsToDevicePixels="True">
                                        <Image Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               SnapsToDevicePixels="True"
                                               Source="{Binding SpriteUrl}" />
                                    </Border>
                                    <StackPanel>
                                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding DisplayName}" />
                                        <TextBlock Foreground="#77000000" Text="{Binding PrimaryType}" />
                                    </StackPanel>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="2" BorderBrush="#33000000" BorderThickness="1" CornerRadius="6" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <ProgressBar Width="200" Height="8" IsIndeterminate="True"
                                     Visibility="{Binding IsLoadingDetails, Converter={StaticResource BoolToVisibility}}" />
                        <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#77000000"
                                   Text="{Binding DetailsStatusText}" />
                    </StackPanel>

                    <TextBlock Grid.Row="1" Margin="0,0,0,10" Foreground="#CCB00020" TextWrapping="Wrap"
                               Text="{Binding DetailsErrorMessage}"
                               Visibility="{Binding HasDetailsError, Converter={StaticResource BoolToVisibility}}" />

                    <Grid Grid.Row="2">
                        <TextBlock Foreground="#77000000" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Text="Select a Pokemon from the list to see details.">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding HasPokemonDetails}" Value="False" />
                                                <Condition Binding="{Binding IsLoadingDetails}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ScrollViewer.Style>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasPokemonDetails}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ScrollViewer.Style>

                            <Grid DataContext="{Binding PokemonDetails}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock DockPanel.Dock="Left" FontSize="22" FontWeight="SemiBold"
                                               Text="{Binding DisplayName}" />
                                    <TextBlock DockPanel.Dock="Right" Foreground="#77000000" VerticalAlignment="Bottom"
                                               HorizontalAlignment="Right">
                                        <Run Text="#" />
                                        <Run Text="{Binding Id, Mode=OneWay, StringFormat={}{0:000}}" />
                                    </TextBlock>
                                </DockPanel>

                                <Image Grid.Row="1" Width="240" Height="240" Stretch="Uniform"
                                       HorizontalAlignment="Left" Margin="0,0,0,12"
                                       Source="{Binding ImageUrl}" />

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Foreground="#77000000" Text="Types:" />
                                    <TextBlock Margin="8,0,0,0" Text="{Binding TypesDisplay}" />
                                </StackPanel>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Foreground="#77000000" Text="Height:" />
                                    <TextBlock Margin="8,0,0,0" Text="{Binding HeightMetersDisplay}" />
                                    <TextBlock Margin="18,0,0,0" Foreground="#77000000" Text="Weight:" />
                                    <TextBlock Margin="8,0,0,0" Text="{Binding WeightKgDisplay}" />
                                </StackPanel>

                                <StackPanel Grid.Row="4">
                                    <TextBlock Margin="0,0,0,6" FontSize="16" FontWeight="SemiBold" Text="Base stats" />
                                    <ItemsControl ItemsSource="{Binding BaseStats}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,6,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="110" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="40" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Foreground="#77000000" Text="{Binding DisplayName}" />
                                                    <ProgressBar Grid.Column="1" Height="10" Margin="10,4,10,0"
                                                                 Maximum="255" Value="{Binding Value}" />
                                                    <TextBlock Grid.Column="2" HorizontalAlignment="Right" Text="{Binding Value}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
