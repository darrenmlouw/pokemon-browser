<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Modern dark theme (deep + glassy) -->

  <!-- Base surfaces -->
  <LinearGradientBrush x:Key="AppBackgroundGradientBrush" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#FF0B1220" Offset="0" />
    <GradientStop Color="#FF0C1526" Offset="0.55" />
    <GradientStop Color="#FF0A1020" Offset="1" />
  </LinearGradientBrush>

  <SolidColorBrush x:Key="SurfaceBrush" Color="#FF0F172A" />

  <!-- Card: minimal/flat (less glass) -->
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FF0F172A" />
  <SolidColorBrush x:Key="CardBorderBrush" Color="#26FFFFFF" />

  <!-- Depth -->
  <Color x:Key="CardShadowColor">#80000000</Color>

  <!-- Text -->
  <SolidColorBrush x:Key="TextBrush" Color="#FFE5E7EB" />
  <SolidColorBrush x:Key="TextMutedBrush" Color="#FF94A3B8" />

  <!-- Accents -->
  <SolidColorBrush x:Key="AccentBrush" Color="#FF60A5FA" />
  <SolidColorBrush x:Key="DangerBrush" Color="#FFFF5C73" />

  <!-- Progress -->
  <SolidColorBrush x:Key="ProgressTrackBrush" Color="#26FFFFFF" />

  <!-- Controls -->
  <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF111C33" />
  <SolidColorBrush x:Key="ControlBorderBrush" Color="#33FFFFFF" />
  <SolidColorBrush x:Key="ControlHoverBrush" Color="#FF16233D" />
  <SolidColorBrush x:Key="ControlPressedBrush" Color="#FF0B1220" />

  <!-- List states -->
  <SolidColorBrush x:Key="ListItemHoverBrush" Color="#12FFFFFF" />
  <SolidColorBrush x:Key="ListItemSelectedBrush" Color="#263B82F6" />

  <SolidColorBrush x:Key="ImagePlaceholderBrush" Color="#14FFFFFF" />

</ResourceDictionary>
